@model string

<td style="width:250px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="User" class="btn btn-primary" asp-route-id="@Model" id="editModal">Edytuj</a>
        <a asp-action="Details" asp-controller="User" class="btn btn-success" asp-route-id="@Model">Szczegóły</a>
        <a asp-action="Lockout" asp-controller="User" class="btn btn-danger" asp-route-id="@Model">Lockout</a>
        <button type="button" class="btn btn-primary modal-link"
                data-targeturl="@Url.Action("Edit","User",new { id = @Model })">
            Edytuj
        </button>
    </div>
</td>
