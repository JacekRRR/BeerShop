@using Piwo.Areas.Admin.Models
@model RoleUserVm

@{
    ViewData["Title"] = "Przypisz rolę";
}
<br />

<h2 class="text-info">Przypisz rolę</h2>
<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 bordered">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <h3>@ViewBag.Mgs</h3>

        
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserId"></label>
            </div>
            <div class="col-5">
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>

            </div>
            <div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-5">
                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
            </div>
            <div>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>






        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Przypisz" />
            <a asp-action="Index" asp-controller="Role" class="btn btn-success">Wróć do listy</a>
        </div>

    </div>


    </form>