
@{
    ViewData["Title"] = "Dodaj rolę";
}

<h2>Dodawanie nowej roli</h2>

<br />
<h2 class="text-info">Nowy użytkownik</h2>
<form id="role-form" asp-action="Create" asp-controller="Role" asp-area="Admin" enctype="multipart/form-data" method="post">
    <div class="p-4 rounded-border">
        <div asp-validation-summary="ModelOnly" class="text-danger">


        </div>
        <h3>ViewBag.Msg</h3>
        <div class="form-group row">
            <div class="col-2">
             <label>Nazwa</label>
            </div>
            <div class="col-5">
                <input id="name" name="name" value="@ViewBag.Name" required="required" class="form-control" />
            </div>
            
        </div>

        

        <div class="form-group">
            <input asp-controller="Role" asp-area="Admin" type="submit" class="btn btn-primary" value="Zapisz" />
            <a asp-action="Index" asp-controller="Role" class="btn btn-success">Wróć</a>
        </div>
    </div>

</form>

@section Scripts{


    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>


    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

   
