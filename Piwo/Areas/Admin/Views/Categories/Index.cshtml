@using Piwo.Models; 

@model IEnumerable<Categories>

@{ 
    ViewData["Title"] = "Index";
}

<br/><br/>
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Kategorie</h2>
    </div>
    <div class="col-6 text-right">
        <a  asp-action="Create" class="btn btn-info">&nbsp; Nowa kategoria</a>
    </div> 
</div>
<br />
<div>
    <table class="table table-striped bordered">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.TypeOfProduct)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.TypeOfProduct</td>
                <td>
                    <partial name="BPartialView" model="@item.Id"/>
                </td>
            </tr>
        }
    </table>
</div>

@section Scripts{ 
    <script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
    <script type="text/javascript">
        $(function() {
            var save = '@TempData["save"]'

            if (save != '') {
                alertify.success(save)
            }
        })
    </script>
}